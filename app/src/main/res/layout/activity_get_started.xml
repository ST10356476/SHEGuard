    android:background="@drawable/purple_gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">


        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/getstarted_logo"
            android:scaleType="fitCenter"
            android:background="@drawable/logo_background" />


        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="SHEGuard"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:letterSpacing="0.05" />


        <TextView
            android:id="@+id/main_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Your Safety, Your\nPower"
            android:textSize="28sp"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:fontFamily="serif" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            android:text="Empowering South African women with discreet protection, support, and resources when you need them most."
            android:textSize="16sp"
            android:textColor="#F0E6F7"
            android:gravity="center"
            android:lineSpacingExtra="2dp" />

