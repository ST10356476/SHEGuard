<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">


        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/getstarted_logo"
            android:scaleType="fitCenter"
            android:background="@drawable/logo_background" />


        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="SHEGuard"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:letterSpacing="0.05" />


        <TextView
            android:id="@+id/main_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Your Safety, Your\nPower"
            android:textSize="28sp"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:fontFamily="serif" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            android:text="Empowering South African women with discreet protection, support, and resources when you need them most."
            android:textSize="16sp"
            android:textColor="#F0E6F7"
            android:gravity="center"
            android:lineSpacingExtra="2dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/get_started_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="24dp"
            android:text="Get Started!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#6A1B9A"
            android:textAllCaps="false"
            android:background="@drawable/logo_background"
            android:elevation="6dp"
            style="@style/Widget.AppCompat.Button.Borderless" />

    </LinearLayout>

</ScrollView>