<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/whiteandpurple_gradient_bkground">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/back_button_desc"
            android:src="@drawable/left_arrow" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sheguard_logo"
                android:scaleType="fitCenter"
                android:contentDescription="@string/logo_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/she_care"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#6A1B9A" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/bottom_navigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="20dp">

            <!-- Header Section -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/shecare_logo"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/shecare_logo_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/gbv_support_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:fontFamily="serif"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/gbv_support_subtitle"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <!-- Emergency Contacts Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/emergency_contacts_heading"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- TEARS Hotline -->
                <LinearLayout
                    android:id="@+id/tears_hotline_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_button_background"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/viber"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/tears_icon_desc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tears_hotline_title"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tears_hotline_number"
                            android:textSize="14sp"
                            android:textColor="#E1BEE7" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Police -->
                <LinearLayout
                    android:id="@+id/police_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_button_background"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/police"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/police_icon_desc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/emergency_police_title"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/emergency_police_number"
                            android:textSize="14sp"
                            android:textColor="#E1BEE7" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Support Locator -->
                <LinearLayout
                    android:id="@+id/support_locator_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_button_background"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/location_icon"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/support_locator_icon_desc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/support_locator_title"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/support_locator_ussd"
                            android:textSize="14sp"
                            android:textColor="#E1BEE7" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Information Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/essential_info_heading"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- Domestic Violence Info -->
                <LinearLayout
                    android:id="@+id/domestic_violence_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_button_background"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dv_understanding_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/dv_understanding_body"
                        android:textSize="14sp"
                        android:textColor="#E1BEE7"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>

                <!-- Emergency Response Info -->
                <LinearLayout
                    android:id="@+id/emergency_response_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_button_background"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/first_response_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/first_response_body"
                        android:textSize="14sp"
                        android:textColor="#E1BEE7"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>

                <!-- Reporting Guide Info -->
                <LinearLayout
                    android:id="@+id/reporting_guide_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/action_button_background"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reporting_to_police_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/reporting_to_police_body"
                        android:textSize="14sp"
                        android:textColor="#E1BEE7"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Podcasts Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/support_podcasts_heading"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Podcast 1 -->
                    <LinearLayout
                        android:id="@+id/podcast_1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/action_button_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageButton
                            android:id="@+id/podcast_image_button_1"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/button_background"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gbvpod1"
                            android:contentDescription="@string/podcast1_desc"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/podcast1_title"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Podcast 2 -->
                    <LinearLayout
                        android:id="@+id/podcast_2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/action_button_background"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:layout_marginEnd="16dp">

                        <ImageButton
                            android:id="@+id/podcast_image_button_2"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/gbvpod2"
                            android:scaleType="centerCrop"
                            android:background="@drawable/button_background"
                            android:contentDescription="@string/podcast2_desc"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/podcast2_title"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <!-- Podcast 3 -->
                    <LinearLayout
                        android:id="@+id/podcast_3"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/action_button_background"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <ImageButton
                            android:id="@+id/podcast_image_button_3"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/gbvpod3"
                            android:scaleType="centerCrop"
                            android:background="@drawable/button_background"
                            android:contentDescription="@string/podcast3_desc"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/podcast3_title"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Videos Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/educational_videos_heading"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Video 1 -->
                    <LinearLayout
                        android:id="@+id/video_1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/action_button_background"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:layout_marginEnd="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/button_background">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/gbvvid1"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/video1_thumb_desc" />

                            <ImageButton
                                android:id="@+id/video_play_button_1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@drawable/img"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/video1_play_desc"
                                android:clickable="true"
                                android:focusable="true" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/video_support_resources"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <!-- Video 2 -->
                    <LinearLayout
                        android:id="@+id/video_2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/action_button_background"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:layout_marginEnd="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/button_background">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/gbvvid2"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/video2_thumb_desc" />

                            <ImageButton
                                android:id="@+id/video_play_button_2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@drawable/img"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/video2_play_desc"
                                android:clickable="true"
                                android:focusable="true" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/video_support_resources"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <!-- Video 3 -->
                    <LinearLayout
                        android:id="@+id/video_3"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/action_button_background"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/button_background">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/gbvvid3"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/video3_thumb_desc" />

                            <ImageButton
                                android:id="@+id/video_play_button_3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:src="@drawable/img"
                                android:scaleType="fitCenter"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/video3_play_desc"
                                android:clickable="true"
                                android:focusable="true" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/video_gbv_finding_support"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Additional Support Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/remember_heading"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/action_button_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_alone_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/not_alone_bullets"
                    android:textSize="14sp"
                    android:textColor="#E1BEE7"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/immediate_help_footer"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/logo_background"
        app:elevation="8dp"
        app:itemIconSize="24dp"
        app:itemTextColor="@color/bottom_nav_text_colors"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>
