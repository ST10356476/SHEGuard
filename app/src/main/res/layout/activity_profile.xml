<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/whiteandpurple_gradient_bkground">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bottom_nav_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/back_button_desc"
            android:src="@drawable/left_arrow" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sheguard_logo"
                android:scaleType="fitCenter"
                android:contentDescription="@string/logo_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/my_profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#6A1B9A" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="20dp">

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/action_button_background"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sheguard_password"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/profile_avatar_desc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/manage_profile_title"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/manage_profile_subtitle"
                    android:textSize="15sp"
                    android:textColor="#E1BEE7"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <!-- Profile Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/action_button_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <!-- First Name Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/first_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/dialog_background"
                    android:hint="@string/hint_first_name"
                    android:textColorHint="#999999"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="16dp" />

                <!-- Last Name Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/last_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/dialog_background"
                    android:hint="@string/hint_last_name"
                    android:textColorHint="#999999"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="16dp" />

                <!-- Email Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_address_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/email_edit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/cancel_button_background"
                    android:hint="@string/hint_enter_email_address"
                    android:textColorHint="#999999"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="16dp" />

                <!-- Phone Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number_optional_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/phone_edit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/cancel_button_background"
                    android:hint="@string/hint_enter_phone_number"
                    android:textColorHint="#999999"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:inputType="phone"
                    android:layout_marginBottom="16dp" />

                <!-- Date of Birth Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dob_optional_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/date_of_birth_edit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/cancel_button_background"
                    android:hint="@string/dob_hint"
                    android:textColorHint="#999999"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <!-- Cancel Button -->
                <LinearLayout
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/action_button_background"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#E1BEE7" />
                </LinearLayout>

                <!-- Save Button -->
                <LinearLayout
                    android:id="@+id/save_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/action_button_background"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/save_changes"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- Security Note -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/action_button_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_notice_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_notice_body"
                    android:textSize="12sp"
                    android:textColor="#E1BEE7"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
