<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/whiteandpurple_gradient_bkground">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/back_button_desc"
            android:src="@drawable/left_arrow" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sheguard_logo"
                android:scaleType="fitCenter"
                android:contentDescription="@string/logo_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/privacy_policy_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#6A1B9A" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="20dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/action_button_background"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sheguard_policy"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/privacy_policy_icon_desc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/policy_header_title"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/policy_header_subtitle"
                    android:textSize="16sp"
                    android:textColor="#E1BEE7"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <!-- Privacy Policy Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/action_button_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@string/effective_date_label'
                    tools:text="Effective Date: November 2025"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:textColor="#E1BEE7"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/policy_intro"
                    android:textSize="14sp"
                    android:textColor="#E1BEE7"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp" />

                <!-- Information We Collect -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_collect_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_collect_list"
                    android:textSize="13sp"
                    android:textColor="#E1BEE7"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp" />

                <!-- How We Use Your Information -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_use_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_use_list"
                    android:textSize="13sp"
                    android:textColor="#E1BEE7"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp" />

                <!-- Sharing of Information -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sharing_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sharing_body"
                    android:textSize="13sp"
                    android:textColor="#E1BEE7"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp" />

                <!-- Data Storage and Security -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/security_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/security_list"
                    android:textSize="13sp"
                    android:textColor="#E1BEE7"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp" />

                <!-- Your Rights -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rights_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rights_list"
                    android:textSize="13sp"
                    android:textColor="#E1BEE7"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Terms of Service Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/action_button_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terms_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terms_intro"
                    android:textSize="14sp"
                    android:textColor="#E1BEE7"
                    android:layout_marginBottom="16dp" />

                <!-- Use of the App -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/use_app_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/use_app_list"
                    android:textSize="13sp"
                    android:textColor="#E1BEE7"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp" />

                <!-- Safety Features -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safety_features_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safety_features_list"
                    android:textSize="13sp"
                    android:textColor="#E1BEE7"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp" />

                <!-- Limitations of Liability -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/liability_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/liability_list"
                    android:textSize="13sp"
                    android:textColor="#E1BEE7"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Contact Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/action_button_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_intro"
                    android:textSize="14sp"
                    android:textColor="#E1BEE7"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_details"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
