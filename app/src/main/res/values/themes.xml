<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.SHEGuard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Apply our custom BottomNavigationView style globally -->
        <item name="bottomNavigationViewStyle">@style/Widget.SheGuard.BottomNavigationView</item>
    </style>

    <!-- App theme -->
    <style name="Theme.SHEGuard" parent="Base.Theme.SHEGuard" />

    <!-- Custom BottomNavigationView style with no tint -->
    <style name="Widget.SheGuard.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@null</item>
    </style>
          <!-- Base application theme. -->
    <style name="Theme.SheGuard" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- If you are defining a custom bottomNavigationViewStyle attribute -->
        <!-- <item name="bottomNavigationViewStyle">@style/Widget.App.BottomNavigationView</item> -->
    </style>
            <attr name="bottomNavigationViewStyle" format="reference" />

        <!-- res/values/styles.xml (or wherever you define your styles) -->
    <style name="MyCustomBottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Your custom attributes here -->
        <item name="android:background">@color/bottom_nav_icon_color_selected</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color_selected</item>
        <item name="itemTextColor">@color/bottom_nav_icon_color_selected</item>
    </style>

